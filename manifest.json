{
    "manifest_version": 3,
    "name": "Zoho Mail Checker",
    "description": "Check your Zoho Mail inbox, get notifications, and manage emails directly from your browser",
    "version": "1.0.0",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png"
        },
        "default_title": "Zoho Mail Checker"
    },
    "background": {
        "service_worker": "js/background.js",
        "type": "module"
    },
    "permissions": [
        "alarms",
        "notifications",
        "storage",
        "identity",
        "offscreen",
        "tts"
    ],
    "host_permissions": [
        "http://127.0.0.1:3847/*",
        "http://localhost:3847/*",
        "https://mail.zoho.com/*",
        "https://mail.zoho.in/*",
        "https://mail.zoho.eu/*",
        "https://mail.zoho.com.au/*",
        "https://www.mail.zoho.com/*",
        "https://www.mail.zoho.in/*",
        "https://www.mail.zoho.eu/*",
        "https://www.mail.zoho.com.au/*",
        "https://accounts.zoho.com/*",
        "https://accounts.zoho.in/*",
        "https://accounts.zoho.eu/*",
        "https://accounts.zoho.com.au/*"
    ],
    "options_page": "options.html",
    "key": "MIIBIjANBgkqhkiG9w0BAQEFAAOCAQ8AMIIBCgKCAQEAzohoMailCheckerExtension"
}